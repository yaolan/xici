<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_bg"
        android:clickable="false"
        android:focusable="false"
        android:paddingBottom="@dimen/vertical_padding_large"
        android:paddingLeft="@dimen/horizontal_padding_large"
        android:paddingRight="@dimen/horizontal_padding_large"
        android:paddingTop="@dimen/vertical_padding_large" >
<!-- 
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/avatar_default_round"
            android:visibility="gone" /> -->

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_tiny"
            android:layout_toRightOf="@id/avatar"
            android:text="sdfa"
            android:textColor="@color/selectable_text_color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/margin_tiny"
            android:lineSpacingMultiplier="@dimen/config_line_spacing_multiplier"
            android:textColor="@color/selectable_text_color_gray_dark"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_alignLeft="@id/title"
            android:layout_below="@id/summary"
            android:layout_marginTop="@dimen/margin_tiny"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/replycount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/image"
            android:layout_marginTop="@dimen/margin_tiny"
            android:background="@drawable/reply_count_bg"
            android:gravity="center"
            android:textColor="@color/selectable_text_color_blue_light"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/zancount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/replycount"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_toLeftOf="@id/replycount"
            android:background="@drawable/zan_count_bg"
            android:gravity="center"
            android:textColor="@color/selectable_text_color_blue_light"
            android:textSize="12sp" />
        
        
        <TextView
            android:id="@+id/createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/replycount"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_toLeftOf="@id/zancount"
            android:singleLine="true"
            android:textColor="@color/selectable_text_color_gray_dark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/createtime"
            android:layout_alignBottom="@id/replycount"
            android:layout_alignLeft="@id/title"
            android:singleLine="true"
            android:text="sdaffsg"
            android:textColor="@color/selectable_text_color_gray_dark"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_divider_holo_light" />

</LinearLayout>