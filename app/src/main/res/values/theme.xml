<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- android theme colors -->
        <item name="colorPrimary">@color/theme_dialer_primary</item>
        <item name="colorPrimaryDark">@color/theme_dialer_high</item>
        <item name="colorAccent">@color/theme_dialer_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="actionMenuTextAppearance">@style/ActionBar.Menu.Xx</item>

        <item name="android:autoCompleteTextViewStyle">@style/Widget.AppCompat.AutoCompleteTextView.Xx</item>
    </style>

    <style name="ActionBar.Menu.Xx" parent="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
    </style>



    <style name="Widget.AppCompat.AutoCompleteTextView.Xx" parent="@style/Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
